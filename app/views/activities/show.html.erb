<p><%= @activity.name %></p>
<p><%= @activity.description %></p>
<p><%= @activity.price %> €</p>
<% if @activity.photo.attached? %>
  <%= cl_image_tag @activity.photo.key, height: 300, width: 400, crop: :fill %>
<% else %>
  <p>Aucune image disponible pour cette activité.</p>
<% end %>


<%= link_to 'Delete', activity_path(@activity), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %>
<%= link_to 'Edit', edit_activity_path(@activity) %>

<div class= "booking_button">
  <p><%= @activity.price %> €/jour</p>
  <%= link_to 'Reserver', new_activity_booking_path(@activity), class: "btn booking-btn" %>
</div>
