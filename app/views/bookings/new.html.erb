<h1>Book <%= @activity.name %></h1>

<div>
  <%= form_with model: [@activity, @booking], local: true do |form| %>
    <div>
      <%= form.label :start_time %>
      <%= form.datetime_select :start_time, class: "form-control" %>
    </div>

    <div>
      <%= form.label :end_time %>
      <%= form.datetime_select :end_time, class: "form-control" %>
    </div>

    <div>
      <%= form.submit "Book Now", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
